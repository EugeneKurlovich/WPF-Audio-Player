        <Button x:Name="button" Content="Save" HorizontalAlignment="Left" Margin="189,38,0,0" VerticalAlignment="Top" Width="75" Click="button_Click"/>
        <TextBox x:Name="textBox" HorizontalAlignment="Left" Height="33" Margin="55,37,0,0" TextWrapping="Wrap" Text="" VerticalAlignment="Top" Width="120"/>
